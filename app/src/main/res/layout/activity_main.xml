<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="12dp"
    tools:context="paramitha.ranindya.learntocount.MainActivity">

    <LinearLayout
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/firstNumber"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/firstNumber"
            android:textSize="100dp" />

        <TextView
            android:id="@+id/sign"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sign"
            android:textSize="100dp" />

        <TextView
            android:id="@+id/lastNumber"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lastNumber"
            android:textSize="100dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="50dp"
        android:hint="You will see input here"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id = "@+id/benarSalah"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editText"
        android:text="@string/correct"
        android:textSize="30dp"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/benarSalah"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:background="@layout/button_background" />

    <LinearLayout
        android:id = "@+id/buttons"
        android:layout_below="@id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
        <Button
            android:id = "@+id/resetButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Soal Baru"
            android:layout_marginHorizontal="20dp"
            android:background="@color/colorButton"/>
        <Button
            android:id = "@+id/backButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Kembali"
            android:background="@color/colorButton"/>
    </LinearLayout>
</RelativeLayout>